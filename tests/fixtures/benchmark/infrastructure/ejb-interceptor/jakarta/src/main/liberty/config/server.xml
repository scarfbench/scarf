<?xml version="1.0" encoding="UTF-8"?>
<server description="Open Liberty server for interceptor sample">

    <!-- Choose a profile with EJB, CDI, JSF, and Servlet -->
    <featureManager>
        <feature>webProfile-9.1</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="9443" host="*"/>

    <!-- Application configuration -->
    <applicationManager autoExpand="true"/>

    <!-- Install the WAR produced by Maven -->
    <webApplication id="interceptor" location="interceptor.war" contextRoot="/"/>

    <!-- Logging -->
    <logging consoleLogLevel="INFO"/>
</server>
