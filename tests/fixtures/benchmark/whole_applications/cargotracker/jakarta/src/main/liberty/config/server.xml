<?xml version="1.0" encoding="UTF-8"?>
<server description="Cargo Tracker Open Liberty Server">
  <featureManager>
    <feature>javaee-8.0</feature>
  </featureManager>

  <basicRegistry id="basic" realm="BasicRealm">
    <user name="cargo" password="cargo" />
  </basicRegistry>

  <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="8080"
    httpsPort="-1" />

  <library id="H2Lib">
    <fileset dir="lib/global/jdbc" includes="h2*.jar" />
  </library>

  <jdbcDriver id="h2-driver" libraryRef="H2Lib" />

  <dataSource id="DefaultDataSource" jndiName="DefaultDataSource"
    jdbcDriverRef="h2-driver">
    <properties URL="jdbc:h2:file:./cargo-tracker-data/cargo-tracker-database"
      user="" password="" />
  </dataSource>

  <webApplication id="cargo-tracker" location="cargo-tracker.war"
    contextRoot="/cargo-tracker">
    <classloader commonLibraryRef="H2Lib" />
  </webApplication>
</server>
